<html>
    <body>
        <% date = DateTime.now %>
        <% days = {0 => "Sunday",
        1 => "Monday",
        2 => "Tuesday",
        3 => "Wednesday",
        4 => "Thursday",
        5 => "Friday",
        6 => "Sautrday"
        } %>
        <% day = days[date.wday] %>
        <% months = {1 => "January",
        2 => "February",
        3 => "March",
        4 => "April",
        5 => "May",
        6 => "June",
        7 => "July",
        8 => "August",
        9 => "September",
        10 => "October",
        11 => "November",
        12 => "December"} %>
        <% month = months[date.month] %>
        <h1>Today</h1>
        <p><%= "The date is #{day}, #{month} #{date.day}, #{date.year}." %></p>
    </body>
</html